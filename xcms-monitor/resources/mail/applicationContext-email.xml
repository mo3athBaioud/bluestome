<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">

	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.21cn.com" />
		<property name="username" value="xcmstest2011@21cn.com" />
		<property name="password" value="xcmstest" />
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<!-- 
				<prop key="mail.smtp.starttls.enable">true</prop>-->
			</props>
		</property>
	</bean>


	<!-- MIME邮件服务类 -->
	<bean id="mimeMailService" class="com.xcms.monitor.mail.MimeMailService">
		<property name="mailSender" ref="mailSender" />
		<property name="freemarkerConfiguration" ref="freemarkerConfiguration"></property>
		<property name="tos">
			<list>
				<value>13619266895@139.com</value>
				<value>zhangxiao917@21cn.com</value>
			</list>
		</property>
	</bean>

	<!-- 用于生成HTML邮件内容的Freemarker配置 -->
	<bean id="freemarkerConfiguration" class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean">
		<property name="templateLoaderPath" value="classpath:/mail" />
	</bean>
	
	<bean id="monitorThread" class="com.xcms.monitor.thread.MonitorThread" init-method="start" destroy-method="stop">
		<property name="mailService" ref="mimeMailService"/>
		<property name="url">
			<value>http://117.34.89.190:8080/staff/list.cgi?start=0&amp;limit=15</value>
		</property>
		<property name="sleepTime">
			<value>900000</value>
		</property>
	</bean>
</beans>