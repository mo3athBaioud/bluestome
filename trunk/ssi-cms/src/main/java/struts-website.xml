<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="website" extends="struts-default" namespace="/website">
		<action name="showSubWeb" class="websiteAction" method="showSubWeb">
			<result name="success">/pages/index.jsp</result>
		</action>
		<action name="showUpWeb" class="websiteAction" method="showUpWeb">
			<result name="success">/pages/index.jsp</result>
		</action>
		<action name="website" class="websiteAction" method="website" />
		<action name="webtree" class="websiteAction" method="toTree" />
		<action name="tree2" class="websiteAction" method="tree2" />
		<action name="toTree" class="websiteAction" method="toTree" />
		<action name="root" class="websiteAction" method="root" />
		
		
		<action name="update" class="websiteAction" method="update" />
		<action name="insert" class="websiteAction" method="insert" />
		<action name="delete" class="websiteAction" method="delete" />
		
		<action name="disable" class="websiteAction" method="disable" />
		<action name="enable"  class="websiteAction" method="enable" />
		
		<action name="sub" class="websiteAction" method="sub">
			<result name="success">/pages/websites/sub.jsp</result>
		</action>
	</package>
</struts>