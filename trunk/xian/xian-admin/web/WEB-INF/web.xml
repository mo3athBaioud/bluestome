<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>XIAN-ADMIN</display-name>
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>XIAN-ADMIN.root</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:/applicationContext.xml
		</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>

	<filter>
		<filter-name>struts-cleanup</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.ActionContextCleanUp
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>struts-cleanup</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	<!-- SESSION 监听器 -->
	<listener>
		<listener-class>
			com.ssi.common.utils.SessionListener
		</listener-class>
	</listener>
	
	<!-- 编码设置 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<!-- Filter 映射 -->
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Struts 配置 -->
	<filter>
		<filter-name>Struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
		<!--  
		<init-param>
			<param-name>actionPackages</param-name>
			<param-value>com.skymobi.qunker.web</param-value>
		</init-param>
		-->
	</filter>
	<filter-mapping>
		<filter-name>Struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- GZJS 过滤器 开始-->
	<filter>
		<filter-name>GzipJsFilter</filter-name>
		<filter-class>
			com.xian.support.cms.common.filter.GzipJsFilter
		</filter-class>
		<init-param>
			<param-name>headers</param-name>
			<param-value>Content-Encoding=gzip</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>GzipJsFilter</filter-name>
		<url-pattern>*.gzjs</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>GzipJsFilter</filter-name>
		<url-pattern>*.gzcss</url-pattern>
	</filter-mapping>
	<!-- GZJS 过滤器 结束 -->	
	
	<!-- 会话过滤器 开始 -->
	<!-- 
	<filter>
		<filter-name>XIANSessionFilter</filter-name>
		<filter-class>
			com.xian.support.cms.common.filter.SessionFilter
		</filter-class>
		<init-param>
			<param-name>exts</param-name>
			<param-value>action,cgi,jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>XIANSessionFilter</filter-name>
		<url-pattern>*.cgi</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>XIANSessionFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	 -->
	<!-- 会话过滤器 结束 -->	
	
	<taglib>
		<taglib-uri>/tags/c.tld</taglib-uri>
		<taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/tags/fmt.tld</taglib-uri>
		<taglib-location>/WEB-INF/tlds/fmt.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/tags/fn.tld</taglib-uri>
		<taglib-location>/WEB-INF/tlds/fn.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/tags/sql.tld</taglib-uri>
		<taglib-location>/WEB-INF/tlds/sql.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>/tags/x.tld</taglib-uri>
		<taglib-location>/WEB-INF/tlds/x.tld</taglib-location>
	</taglib>
	<welcome-file-list>
		<welcome-file>login3.jsp</welcome-file>
	</welcome-file-list>
</web-app>
