<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="website" type="com.ssi.common.dal.domain.Website" />
	<typeAlias alias="count" type="com.ssi.common.dal.domain.Count" />

	<resultMap class="website" id="websiteMap">
		<result column="d_id" property="id" />
		<result column="d_web_type" property="type" />
		<result column="d_parent_id" property="parentId" />
		<result column="d_web_url" property="url" />
		<result column="d_web_name" property="name" />
		<result column="d_createtime" property="createtime" />
		<result column="d_modifytime" property="modifytime" />
		<result column="d_status" property="status" />
		<result property="children" column="d_id"
			select="GET_CHILD_WEBSITE_BY_FATHER_ID" />
		<!-- 
		<result property="articles" column="d_id" select="GET_ARTICLE_BY_WEB_ID" />						
		-->
		<result property="count" column="d_id"
			select="GET_ARTICLE_COUNT_BY_WEB_ID" />
	</resultMap>

     <insert id="website.insert" parameterClass="website"> 
 		INSERT INTO tbl_web_site 
 		(d_web_type,d_parent_id,d_web_url,d_web_name,d_status,d_createtime,d_modifytime) 
 		VALUES (#type#,#parentId#,#url#,#name#,#status#,#createtime#,now())
 		<selectKey resultClass="int" type="post" keyProperty="id">
 			select LAST_INSERT_ID() as value
 		</selectKey>
	</insert>

    <update id="website.update" parameterClass="website"> 
 		UPDATE tbl_web_site set 
 		d_web_type=#type#,
 		d_parent_id = #parentId#,
 		d_web_name=#name#,
 		d_status=#status#,
 		d_modifytime = now()
 		where d_id = #id# and d_web_url = #url#
	</update>
	
	<statement id="GET_WEBSITE_BY_ID" parameterClass="java.lang.Integer"
		resultMap="websiteMap">
		SELECT t.* FROM tbl_web_site t WHERE t.d_id = #value# ORDER BY
		t.d_id
	</statement>

	<statement id="GET_CHILD_WEBSITE_BY_FATHER_ID"
		parameterClass="java.lang.Integer" resultMap="websiteMap">
		SELECT t.* FROM tbl_web_site t WHERE t.d_parent_id = #value#
		ORDER BY t.d_id asc
	</statement>

	<statement id="GET_WEBSITE_COUNT" parameterClass="java.util.Map"
		resultClass="java.lang.Integer">
		SELECT COUNT(*) FROM tbl_web_site T WHERE 1 = 1
		<dynamic>
			<isNotEmpty property="id" prepend="and">
				t.d_id = #id#
			</isNotEmpty>
			<isNotEmpty property="parentId" prepend="and">
				t.d_parent_id = #parentId#
			</isNotEmpty>
			<isNotEmpty property="type" prepend="and">
				t.d_web_type = #type#
			</isNotEmpty>
			<isNotEmpty property="url" prepend="and">
				t.d_web_url = #url#
			</isNotEmpty>
			<isNotEmpty property="name" prepend="and">
				t.d_web_name = #name#
			</isNotEmpty>
			<isNotEmpty property="createtime" prepend="and">
				t.d_createtime = #createtime#
			</isNotEmpty>
			<isNotEmpty property="status" prepend="and">
				t.d_status = #status#
			</isNotEmpty>
		</dynamic>
	</statement>

	<statement id="QUERY_WEBSITE_BY_MAP" parameterClass="java.util.Map"
		resultMap="websiteMap">
		SELECT DISTINCT T.* FROM tbl_web_site T WHERE 1 = 1
		<dynamic>
			<isNotEmpty property="id" prepend="and">
				t.d_id = #id#
			</isNotEmpty>
			<isNotEmpty property="parentId" prepend="and">
				t.d_parent_id = #parentId#
			</isNotEmpty>
			<isNotEmpty property="type" prepend="and">
				t.d_web_type = #type#
			</isNotEmpty>
			<isNotEmpty property="url" prepend="and">
				t.d_web_url = #url#
			</isNotEmpty>
			<isNotEmpty property="name" prepend="and">
				t.d_web_name = #name#
			</isNotEmpty>
			<isNotEmpty property="createtime" prepend="and">
				t.d_createtime = #createtime#
			</isNotEmpty>
			<isNotEmpty property="status" prepend="and">
				t.d_status = #status#
			</isNotEmpty>
		</dynamic>
		ORDER BY D_ID
		<dynamic>
			<isNotEmpty property="asc">
				$asc$
			</isNotEmpty>
		</dynamic>
		<dynamic>
			<isNotEmpty property="offset" prepend="limit">
				#offset#
			</isNotEmpty>
			<isNotEmpty property="limit" prepend=",">
				#limit#
			</isNotEmpty>
		</dynamic>
	</statement>

	<statement id="GET_COUNT_BY_WEB_ID"
		parameterClass="java.lang.Integer" resultClass="count">
		select d_link as name,count(*) AS total from tbl_image where
		d_article_id in ( select distinct d_id from tbl_article where
		d_web_id in (select distinct d_id from tbl_web_site where
		d_parent_id = #webid#) ) group by name
	</statement>

	<!-- 
		<select id="GET_ARTICLE_COUNT_BY_WEB_ID" parameterClass="java.lang.Integer" resultClass="java.lang.Integer">
		select count(*) from tbl_article where d_web_id = #value#
		</select>
	-->
</sqlMap>



