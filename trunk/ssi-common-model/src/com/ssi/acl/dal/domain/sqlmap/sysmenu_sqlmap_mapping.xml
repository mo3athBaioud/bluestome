    </statement>
	
    <insert id="INSERT_TBL_ROLE_SYSMENU" parameterClass="roleSysMenu"> 
 		INSERT INTO TBL_ROLE_SYSMENU 
 		(D_ROLEID,D_SYSMENUID,D_CREATE_DT) 
